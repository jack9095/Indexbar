<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.fei.indexbar.MainActivity">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginEnd="30dp">

    </androidx.recyclerview.widget.RecyclerView>

    <!-- 这个是浮动的提示 ，配合字母栏实现放大浮动提示滑动到哪个字母-->
    <!--下面的自定义属性都是默认的,可以不写-->
    <com.fei.indexbar.copy.IndexBarTipsViewCopy
        android:id="@+id/indexBarTipsView"
        android:layout_alignTop="@+id/index_bar"
        android:layout_width="45dp"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:layout_toLeftOf="@+id/index_bar"
        />

    <com.fei.indexbar.copy.IndexBarCopy
        android:id="@+id/index_bar"
        android:layout_centerVertical="true"
        android:layout_width="30dp"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:background="@color/white" />
</RelativeLayout>